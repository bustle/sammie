{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "",

  "Parameters": {
    "StackName": {
      "Type": "String",
      "Default": "__STACK_NAME__"
    },
    "BucketName": {
      "Type": "String",
      "Default": "__BUCKET_NAME__"
    }
  },

  "Resources": {
    "__RESOURCE_NAME__": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "FunctionName": "__FUNCTION_NAME__",
        "Description": "",
        "CodeUri": "index.js",
        "Handler": "index.handler",
        "Runtime": "nodejs6.10",
        "MemorySize": 128,
        "Timeout": 3,
        "Events": {
          "ApiRequestRoot": {
            "Type": "Api",
            "Properties": {
              "Path": "/",
              "Method": "ANY"
            }
          },
          "ApiRequestProxy": {
            "Type": "Api",
            "Properties": {
              "Path": "/{proxy+}",
              "Method": "ANY"
            }
          }
        }
      }
    }
  },

  "Outputs": {
    "Region": { "Value" : { "Ref" : "AWS::Region" } }, 
    "ApiId": { "Value": { "Ref": "ServerlessRestApi" } }
  }
}
